{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["specVersion", "runtimesVersion", "minDaemonVersion", "generatedAt"],
  "properties": {
    "specVersion": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$",
      "description": "Manifest specification version"
    },
    "runtimesVersion": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Runtimes version"
    },
    "minDaemonVersion": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Minimum required daemon version"
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when manifest was generated"
    },
    "notes": {
      "type": "string",
      "description": "Optional notes about the manifest"
    }
  },
  "additionalProperties": false
}

